<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="12/12/2013 10:00 PM"
        android:textColor="@color/AppSecondaryColor"
        android:textSize="12sp" />

    <TextView 
        android:id="@+id/transaction_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press 1121 to confirm the transaction"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/transaction_msg_background"
        android:padding="12dp"
        android:textColor="#fff"
        />

</LinearLayout>
